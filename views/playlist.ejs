<% include ./partials/header %>

	<div class="container">
        <div class="column add-bottom">
            <div id="mainwrap">
                <div id="nowPlay">
                    <span id="npAction">Paused...</span>
                    <span id="npTitle"></span>
                </div>
                <div id="audiowrap">
                    <div id="audio0">
                        <% playlistItems.forEach(function(item){ %>
                            <audio class="js-player" preload="none" src="<%= item.src %>" data-plyr-config='{ "duration": "<%= item.duration %>" }'></audio>
                        <% }) %>
                    </div>
                    <div id="tracks">
                        <a id="btnPrev">&larr;</a>
                        <a id="btnNext">&rarr;</a>
                    </div>
                </div>
                <div id="plwrap">
                    <ul id="plList">
						<% playlistItems.forEach(function(item, i){ %>
							<% var trackNumber = item.track %>
							<% if (item.track.toString().length === 1) { %>
								<% trackNumber = "0" + trackNumber %>
                            <% } %>
                            <% var durationInMinutes = moment.utc(item.duration*1000).format("mm:ss"); %>
							<li data-src="<%= item.src %>" data-index="<%= i %>"><div class="plItem"><span class="plNum"><%= trackNumber %>.</span><span class="plTitle"><%= item.name %></span><span class="plLength"><%= durationInMinutes %></span></div></li>
						<% }) %>
					</ul>
                </div>
            </div>
        </div>
	</div>

<% include ./partials/footer %>